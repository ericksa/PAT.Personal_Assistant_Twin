# ================================
# PAT Backend Environment Template
# ================================
# Copy this file to .env and fill in your values

# ----------------------------
# Database Configuration
# ----------------------------
POSTGRES_DB=llm
POSTGRES_USER=llm
POSTGRES_PASSWORD=change_me_secure_password

# ----------------------------
# Redis Configuration
# ----------------------------
REDIS_URL=redis://redis:6379/0

# ----------------------------
# MinIO Object Storage
# ----------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_secure_password
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=change_me_secure_password
MINIO_URL=http://minio:9000

# ----------------------------
# Ollama LLM Configuration
# ----------------------------
# Host for Ollama service (running on host machine)
OLLAMA_HOST=host.docker.internal:11434
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_EMBEDDING_MODEL=bge-m3:latest

# ----------------------------
# Agent Service Configuration
# ----------------------------
AGENT_URL=http://agent-service:8000
LLM_PROVIDER=ollama
TOP_K=5
SCORE_THRESHOLD=0.2

# ----------------------------
# n8n Workflow Orchestration
# ----------------------------
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_secure_password
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
GENERIC_TIMEZONE=America/New_York

# ----------------------------
# Site Configuration
# ----------------------------
SITE_NAME=localhost
ADMIN_PASSWORD=change_me_secure_password

# ----------------------------
# Hugging Face Hub
# ----------------------------
# Optional: For accessing private models or increased rate limits
# Get token from: https://huggingface.co/settings/tokens
HUGGINGFACE_HUB_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ----------------------------
# Third-party Integrations
# ----------------------------
# Optional tokens for additional services
OPENCLAW_GATEWAY_TOKEN=your_token_here
OPENWEBUI_KEY=your_key_here
WEBUI_SECRET_KEY=generate_a_random_secret_key_here

# ----------------------------
# LinkedIn Job Search API
# ----------------------------
# Get credentials from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:8000/auth/linkedin/callback
LINKEDIN_TOKEN_TTL=5184000

# ----------------------------
# Email Notifications
# ----------------------------
PAT_NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# ----------------------------
# Job Search Configuration
# ----------------------------
JOB_SEARCH_ENABLED=true
JOB_SEARCH_SCHEDULE="0 8 * * *"  # 8 AM daily
GOVERNMENT_AGENCY_PRIORITY=VA,DHA,DOD,DOT

# ----------------------------
# Grafana Configuration
# ----------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_secure_password